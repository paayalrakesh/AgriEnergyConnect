@model IEnumerable<AgriEnergyConnect.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Context.Session.GetString("Role") == "Employee")
{
    <form method="get" class="mb-4">
        <div class="form-group">
            <label>Filter by Category:</label>
            <input type="text" name="categoryFilter" class="form-control" />
        </div>
        <div class="form-group">
            <label>Start Date:</label>
            <input type="date" name="startDate" class="form-control" />
        </div>
        <div class="form-group">
            <label>End Date:</label>
            <input type="date" name="endDate" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Apply Filter</button>
    </form>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
